#!/usr/bin/env sh

echo ''
echo '---------------------------------------------------------------------------------'
echo '** ZIP, RAR, TAR.GZ -- ARCHIVE HANDLING **'
echo '---------------------------------------------------------------------------------'
echo "TAR"
echo "## UNTAR A TAR, TAR.GZ, OR TAR.BZ ARCHIVE"
echo "---- Untar in current dir:       tar -xvf sometarfile.tar.gz"
echo "---- Untar in specified dir:     tar -xvf sometarfile.tar.gz -C path/to/output/dir"
echo ""
echo "## LIST TAR ARCHIVE CONTENT:     tar -tvf sometarfile.tar.gz"
echo "## VIEW TAR ARCHIVE SIZE:        tar -czf sometarfile.tar.gz \| wc -c"
echo "---------------------------------------------------------------------------------"
echo "ZIP"
echo "## UNZIP INTO SPECIFIED DIR:    zip somezipfile.zip -d ./output_dir"
echo '---------------------------------------------------------------------------------\n'

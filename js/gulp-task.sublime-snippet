gulp.task('${1:taskname}', function ${1:taskName}Task() {
	return gulp.src(${2:SRC})
		.pipe(newerThanRootIfNotProduction())
		.pipe(consoleTaskReport())
		.pipe(${4:gulpPipelineAction()})
		.pipe(gulp.dest(${3:DEST}));
});

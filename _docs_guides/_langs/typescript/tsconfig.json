{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "../../build",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "strictNullChecks": false,
        "pretty": true,
        "lib": ["es2015", "dom", "es2016"],
        "typeRoots": ["./typings"],
        "types": []
    },
    "exclude": [
        "node_modules",
        "docs_guides/build_js",
        "*.js",
        "*.json",
        ".git",
        ".eslintrc",
        ".babelrc",
        ".node-version"
    ],
    "filesGlob": [
        "./typings/browser.d.ts",
        "./app/**.tsx",
        "./app/**.ts"
    ],
    "files": [
        "app/app.tsx"
    ]
}

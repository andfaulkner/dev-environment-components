{
    "extends": "./configs/tsconfig-base",
    "compilerOptions": {
        "types": ["node"],
        "outDir": "./",
        "strictFunctionTypes": true,
        "skipLibCheck": true
    },
    "include": [
        "./*.ts",
        "./*.mjs",
        "./scripts/**/*.ts",
        "./scripts/ts/**/*.ts",
        "./node_modules/"
    ],
    "exclude": ["*.js", "*.json", "doc/*.ts"]
}
